from random import randint

#Para el primer requerimiento debemos crear la función MENÚ en el cual debemos imprimir distintas opciones

def menu():
    print("__MENÚ PRINCIPAL__")
    print("Escoja una opción:")
    print("1: Generar estado incial del puerto seco")
    print("2: Imprimir estado del puerto seco")
    print("3: Ubicar un contenedor")
    print("4: Incluir un nuevo contenedor")
    print("5: Retirar un contenedor")
    print("0: Cerrar jornada laboral")
    opcion = int(input())
    return opcion

#En caso de seleccionar la opción 1 debemos solicitar 2 valores definidos por las variables n(Cantidad máxima de contenedores en una pila) y m (Cantidad maxima de pilas de contenedores)
